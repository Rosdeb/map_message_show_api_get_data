<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_background" />
            <stroke android:width="2dp" android:color="@color/selected_stroke" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/default_background" />
            <stroke android:width="1dp" android:color="@color/default_stroke" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
